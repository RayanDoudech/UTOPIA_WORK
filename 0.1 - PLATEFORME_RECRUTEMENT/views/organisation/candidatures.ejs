<body>
<%- include('../sidebar/sidebar', {user: user}); %>
<main>
    <h1>GESTION DE MON ORGANISATION</h1>
    <div class="row" style="display: flex; justify-content: center; align-items: center; margin: 20px">
        <div class="col-4">
            <button onclick="filter_table('ACCEPTÉE')" style="width: 100%" class="btn btn-success">LES CANDIDATURES
                ACCEPTÉES
            </button>
        </div>
        <div class="col-4">
            <button onclick="filter_table('ENVOYÉE')" style="width: 100%" class="btn btn-primary">LES CANDIDATURES EN
                ATTENTE
            </button>
        </div>
        <div class="col-4">
            <button onclick="filter_table('REFUSÉE')" style="width: 100%" class="btn btn-danger">LES CANDIDATURES
                REFUSÉES
            </button>
        </div>
    </div>
    <div class="row" style="display: flex; justify-content: center; align-items: center; margin: 20px">
        <button onclick="filter_table('')" style="width: 100%" class="btn btn-secondary">TOUTES LES CANDIDATURES
        </button>
    </div>
    <div class="container">
        <div class="row">
            <table id="candidatures" class="table table-striped table-bordered" style="width:100%">
                <thead>
                <tr>
                    <th>candidature id</th>
                    <th>offre id</th>
                    <th>Nom du candidat</th>
                    <th>Prénom du candidat</th>
                    <th>Adresse email du candidat</th>
                    <th>Téléphone du candidat</th>
                    <th>Status de la candidature</th>
                    <th>Status de la candidature n</th>
                    <th>Actions</th>
                </tr>
                </thead>
            </table>
        </div>
